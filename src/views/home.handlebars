<div class="navbar">
    <a href="/logout">Logout</a>
</div>
<div class="box" style="margin-top: 20px;">
    <h1>Bienvenido!</h1>
    <div class="box">
        {{#if user.first_name}}
            <p><b>Nombre:</b> {{user.first_name}}</p>
        {{/if}}
        {{#if user.last_name}}
            <p><b>Apellido:</b> {{user.last_name}}</p>
        {{/if}}        
        {{#if user.email}}
            <p><b>Email:</b> {{user.email}}</p>
        {{/if}}
        {{#if user.age}}
            <p><b>Edad:</b> {{user.age}}</p>
        {{/if}}
        {{#if isAdmin}}
            <p><b>Rol:</b> Admin</p>
        {{else}}
            <p><b>Rol:</b>Usuario</p>
        {{/if}}
    </div>
    <a href="/views/products" class="button-home">Ver Productos</a>
    {{#if cart_id}}
        <a href="/carts/{{cart_id}}" class="button-home">Ver Carrito</a>
    {{/if}}
</div>

	